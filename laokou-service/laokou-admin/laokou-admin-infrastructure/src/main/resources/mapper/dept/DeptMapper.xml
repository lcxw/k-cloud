<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.laokou.admin.gatewayimpl.database.DeptMapper">
    <select id="getDeptList" resultType="org.laokou.admin.gatewayimpl.database.dataobject.DeptDO">
        select id,pid,`name`,sort from boot_sys_dept
        where del_flag = 0 and tenant_id = #{deptDO.tenantId}
        <if test="deptDO.name != null and deptDOname != ''">
            and `name` like concat('%',#{deptDO.name},'%')
        </if>
        order by sort desc
    </select>
    <select id="getDeptIdsByRoleId" resultType="long">
        SELECT a.id
        FROM boot_sys_dept a
           ,boot_sys_role b
           ,boot_sys_role_dept c
        WHERE a.id = c.dept_id
          AND c.role_id = b.id
          AND b.id = #{roleId}
          and a.del_flag = 0
        group by a.id
    </select>
    <select id="getDeptPathByPid" resultType="java.lang.String">
        select path
        from boot_sys_dept
        where id = #{pid}
    </select>
    <select id="selectDeptChildrenListByLikePath"
            resultType="org.laokou.admin.gatewayimpl.database.dataobject.DeptDO">
        select id
             ,path
        from boot_sys_dept
        where path like concat(#{path},'%')
            and path <![CDATA[ <> ]]> #{path}
    </select>
</mapper>